<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col">
            <h1 class="text-center my-3">Edit Recipe: <%= recipe.name %></h1>
            <div class="mx-auto w-50">
                <form action="/recipes/<%= recipe._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" value="<%= recipe.name %>" name="recipe[name]" required>
                    </div>   
                    <div class="form-group">
                        <input class="form-control" type="text" value="<%= recipe.image %>" name="recipe[image]">
                    </div> 
                    <div class="form-group">
                        <input class="form-control" type="text" value="<%= recipe.description %>" name="recipe[description]">
                    </div> 
                    <div class="form-group">
                        <textarea name="recipe[ingredients]" rows="<%= recipe.ingredients.split("\n").length %>"><%= recipe.ingredients %></textarea>
                    </div> 
                    <div class="form-group">
                        <textarea name="recipe[instructions]" rows="<%= recipe.instructions.split("\n").length %>"><%= recipe.instructions %></textarea>
                    </div> 
                    
                    <div class="form-group">
                        <button class="btn btn-primary btn-lg btn-block">Edit!</button>
                    </div> 
                </form>
                <a href="/recipes">Go Back</a>
            </div>            
                
        </div>
    </div>
</div>
<% include ../partials/footer %>