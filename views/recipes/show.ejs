<% include ../partials/header %>


<h1><p><%= recipe.name %></p></h1>

<img src="<%= recipe.image %>">
    
<p><%= recipe.description %></p>

<p>
    <a class="btn btn-success" href="/recipes/<%= recipe._id %>/comments/new">Add New Comment</a>
</p>

<ul>
    <h3>Ingredients:</h3>
    <% recipe.ingredients.split("\n").forEach(ingredient => { %>
        <p><%= ingredient %></p>
    <% }); %>
</ul>

<ul>
    <h3>Instructions:</h3>
    <% recipe.instructions.split("\n").forEach(paragraph => { %>
        <p><%= paragraph %></p>
    <% }); %>
</ul>

<div class="comment-area">
    <h3>Comments: </h3>
    <% recipe.comments.forEach(function(comment){ %>
        <p>
            <strong><%= comment.author %></strong> - <%= comment.text %>
        </p>
        <p>
            <small><small><%= comment.date %></small></small>
        </p>
    <% }); %>
</div>



<% include ../partials/footer %>