<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col">
            <h1 class="text-center my-3">Create a New Recipe</h1>
            <div class="mx-auto w-50">
                <form action="/recipes" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="Name" name="name" required>
                    </div>   
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="Image url" name="image">
                    </div> 
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="Description" name="description">
                    </div> 
                    <div class="form-group">
                        <textarea placeholder="Ingredients" name="ingredients" rows="10"></textarea>
                    </div> 
                    <div class="form-group">
                        <textarea placeholder="Instructions"name="instructions" rows="20"></textarea>
                    </div> 
                    
                    <div class="form-group">
                        <button class="btn btn-primary btn-lg btn-block">Submit!</button>
                    </div> 
                </form>
                <a href="/recipes">Go Back</a>
                
            </div>            
                
        </div>
    </div>
</div>

<script type="text/javascript" src="/script.js"></script>
<% include ../partials/footer %>