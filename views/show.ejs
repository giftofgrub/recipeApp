<% include partials/header %>


<h1><p><%= recipe.name %></p></h1>

<img src="<%= recipe.image %>">
    
<p><%= recipe.description %></p>

<ul>
    <h3>Ingredients:</h3>
    <% recipe.ingredients.split("\n").forEach(ingredient => { %>
        <p><%= ingredient %></p>
    <% }); %>
</ul>

<ul>
    <h3>Instructions:</h3>
    <% recipe.instructions.split("\n").forEach(paragraph => { %>
        <p><%= paragraph %></p>
    <% }); %>
</ul>





<% include partials/footer %>