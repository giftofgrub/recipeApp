<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col">
            <h1 class="text-center my-3">Edit Comment</h1>
            <div class="mx-auto w-50">
                <form action="/recipes/<%= recipe_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                    </div>                    
                    <div class="form-group">
                        <button class="btn btn-primary btn-lg btn-block">Submit!</button>
                    </div> 
                </form>
                <a href="/recipes/<%= recipe_id %>">Go Back</a>
            </div>            
                
        </div>
    </div>
</div>
<% include ../partials/footer %>